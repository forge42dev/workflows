#!/usr/bin/env bash

__dirname="$(cd "$(dirname $0)" && pwd)"
source "$__dirname/prepare-vars"

input=$(cat "$__dirname/inputs.json")
context=$(cat "$__dirname/context.json")
debug "input=$input"
debug "context=$context"
echo
echo
echo "---"
echo "PREPARE VARS"
prepare_vars "$input" "$context"
echo "---"
echo
echo
echo "workspace_path=$workspace_path"
echo "workspace_path_relative=$workspace_path_relative"
echo "workspace_name=$workspace_name"
echo "fly_app_name=$fly_app_name"
echo "fly_config_file_path=$fly_config_file_path"
echo "git_commit_sha=$git_commit_sha"
echo "git_commit_sha_short=$git_commit_sha_short"
